<idea-plugin>
    <id>com.autolanguage.switcher</id>
    <name>Auto Language Switcher</name>
    <vendor>AutoLanguage</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- تعريف مكون يبدأ مع تشغيل البرنامج -->
        <postStartupActivity implementation="com.autolanguage.AutoLanguageStartupActivity"/>
        <!-- تعريف شريط الحالة -->
        <statusBarWidgetFactory implementation="com.autolanguage.AutoLanguageStatusBarWidgetFactory"/>
        
        <!-- تعريف الخدمة لتخزين الإعدادات (على مستوى التطبيق) -->
        <applicationService serviceImplementation="com.autolanguage.AutoLanguageSettingsState"/>
        
        <!-- تعريف الإعدادات (على مستوى التطبيق) -->
        <applicationConfigurable
            instance="com.autolanguage.AutoLanguageConfigurable"
            id="com.autolanguage.AutoLanguageConfigurable"
            displayName="Auto Language Switcher"
            parentId="tools"/>

        <!-- تعريف مجموعة التنبيهات -->
        <notificationGroup id="Auto Language Switcher" displayType="BALLOON"/>
    </extensions>
</idea-plugin>
